{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "^/favicon.(.*)",
      "dest": "/favicon.$1"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"  // Serve robots.txt directly
    },
    {
      "src": ".*",
      "dest": "/index.html"  // Redirect all other requests to index.html
    }
  ]
}  //udpate